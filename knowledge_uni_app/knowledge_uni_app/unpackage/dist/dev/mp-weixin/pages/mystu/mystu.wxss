.search-student-item {
	width: 100%;	
	height: 100rpx;
	display: flex;
	align-items: center;
}
.student-avatar {
	width: 90rpx;
	height: 90rpx;
	margin-right: 30rpx;
	border-radius: 50%;
}
.student-inner-arow {
	margin-left: 60%;
}
.xiangziwrapold {
	display: none;
}

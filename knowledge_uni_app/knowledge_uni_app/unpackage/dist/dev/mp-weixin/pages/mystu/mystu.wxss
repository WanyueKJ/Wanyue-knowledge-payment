.m-student-wrap {
	border-top: 6rpx solid #F5F5F5;
}

/* 老师搜索结果 */
.search-student-info {
	width: 95%;
	padding-left: 7%;
	margin: 0 auto 50rpx;
}
.s-more-view {
	float: right;	
	margin-top: 10rpx;
	margin-right: 40rpx;
	font-size: 12rpx;
}


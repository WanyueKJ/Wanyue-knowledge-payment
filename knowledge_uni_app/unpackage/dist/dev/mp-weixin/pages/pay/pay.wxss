/* 课程列表区域 */
.course-list-wrap {
	margin-top: 40rpx;
}
.live-title {
	font-size: 30rpx;
	font-weight: bold;
	margin-left: 10rpx;
}
.live-more {
	font-size: small;
	position: absolute;
	right: 40rpx;
	color: #969696;
	margin-top: 7rpx;
}
.more_image{
	width: 20rpx;
	height: 20rpx;
	position: absolute;
	right: 22rpx;
	margin-top: 20rpx;
}
.content-more {
	position: absolute;
	right: 50rpx;
	display: inline;
	color: #969696;
	font-size: 20rpx;
}
.live-list {
	margin-bottom: 20rpx;
	padding-left: 8rpx;
}
.live-list::after {
	display: block;
	clear: both;
	height: 0;
	content: "";
	visibility: hidden;
	overflow: hidden;
}
.live-list-img-wrap {
	position: relative;
	width: 31%;
	height: 160rpx;
	float: left;
	margin-right: 6rpx;
	margin-top: 20rpx;
}


/* 课程图片 */
.live-list-img {
	width: 100%;
	height: 100%;
	border-radius: 8rpx;
}
.course-title-icon {
	position: absolute;
	left: 0rpx;
	top: 2rpx;
	width: 60rpx;
	height: 30rpx;
	line-height: 30rpx;
	text-align: center;
	border-radius: 8rpx 0 8rpx 0;
	background-color: rgba(0, 0, 0, 0.6);
	font-size: 18rpx;
	color: #DBDBDB;
}


/* 课程内容 */
.live-list-info {
	float: left;
	width: 65%;
	height: 160rpx;
	margin-left: 15rpx;
}
.live-teacher-avatar {
	width: 35rpx;
	height: 35rpx;
	border-radius: 50%;
	margin-top: 20rpx;
}


/* 直播列表标题 */
.live-c-title {
	font-weight: bold;
	overflow: hidden;
	height: 70rpx;
	line-height: 1.3em;
	-webkit-line-clamp: 2;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	margin-top: 20rpx;
}
.live-status {
	font-size: 10px;
	padding-top: 0rpx;
	color: #969696;
}
.live-status-tuwen {
	font-size: 20rpx;
	color: #969696;
	width: 60rpx;
	text-align: center;
	border: 2rpx solid #969696;
	border-radius: 8rpx;
	position: relative;
    top: 10rpx;
}
.living-status {
	padding-top: 0rpx;
	color: #2C62EF;
}



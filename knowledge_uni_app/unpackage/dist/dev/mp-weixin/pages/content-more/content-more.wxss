/* 未登录提示 */
.no-login-wrap {
		text-align: center;
		background-color: #fff;
		-webkit-border-radius: 20px;
		        border-radius: 20px;
		width: 350rpx;
		height: 200rpx;
		position: absolute;
		left: 50%;
		top: 50%;
		-webkit-transform: translate(-50%,-50%);
		        transform: translate(-50%,-50%);
}
.no-login-txt {
		display: block;
		font-size: 26rpx;
		color: #646464;
}
.no-login-btn {
		display: block;
		width: 180rpx;
		height: 60rpx;
		line-height: 60rpx;
		margin: 20rpx auto;
		font-size: 24rpx;
		color: #2C62EF;
		border: 2rpx solid #2C62EF;
		-webkit-border-radius: 10rpx;
		        border-radius: 10rpx;
}
